<%= form_for @accounting do |f| %>
<% if @accounting.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@accounting.errors.count, "error") %> 入力内容が適切ではありません。　</h2>
    <ul>
    <% @accounting.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
     <% end %>
     </ul>
    </div>
    <% end %>

    <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
    </P>
     <p>
      <%= f.label :name %><br>
      <%= f.text_field :name %>
                </p>
     <p>
     <%= f.label :date %><br>
     <%= f.datetime_select(:date, use_month_numbers: true)%>
     </p>
    <p>
        <%= f.label :purpose %><br>
         <%= f.text_area :purpose %>
     </p>
                                       
 <p>
 <%= f.submit %>
 </p>
 <% end %>

