<%= form_for([@project, @project.tasks.build]) do |f| %>
  <% if @task.errors.any? %>
    <div id="error explanation">
      <p><%= pluralize(@task.errors.count, "error") %> 入力内容が適切ではありません。<p>
      <ul>
      <% @project.errors.full_messages.each do |msg| %>
        <li> <%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
  
  <p>
    <%= f.label :due %><br>
    <%= f.datetime_select :due %>
  </p>
  
  <p>
    <%= f.fields_for :tasks_users, @task.tasks_users do |tu| %><br>
      <%= tu.collection_select :user_id, User.all, :id, :name %>
	<% end %>
  </p>
  
  <p>
    <%= f.label :content %><br>
    <%= f.text_area :content %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

