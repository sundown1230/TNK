<h1><%= @project.title %></h1>
<h3>レポート一覧</h3>
<%= link_to 'レポートの追加', new_project_report_path(@project) %> 
<table class="table table-default">
  <tr>
    <th>Title</th>
	<th>Text</th>
	<th>Author</th>
	<th colspan="3"></th>
  </tr> 
  <% @reports.each do |report| %>
    <tr>
	  <td><%= link_to report.title, project_report_path(@project, report) %> </td> 
      <td><%= report.text %></td>
      <td><%= report.user_id %></td>
	  <td><%= link_to '編集', edit_project_report_path(@project, report) %></td>
      <td><%= link_to '削除', project_report_path(@project, report),
	          method: :delete, data: { confirm: '本当によろしいですか？' } %>    </td>
    </tr>
  <% end %>
</table>
<%= link_to 'プロジェクト一覧に戻る', projects_path %>
 | <%= link_to 'プロジェクトページに戻る', project_path(@project) %>
