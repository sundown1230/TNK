<p>
  <strong>Title:</strong>
  <%= @project.title %>
</p>
 
<p>
  <strong>Description:</strong>
  <%= @project.description %>
</p>

<h5>【レポート一覧】</h5>
  <table class="table">
    <tr>
	  <th>Title</th>
	  <th>Description</th>
    </tr>
    <% @project.reports.each do |report| %>
    <tr>
	  <td><%= report.title %></td>
	  <td><%= report.text %></td>
    </tr>
    <% end %>
  </table>
<h5>レポートを追加する</h5>
<%= form_for([@project, @project.reports.build]) do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :user_id %><br>
    <%= f.text_field :user_id %>
  </p>
  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
<%= link_to 'プロジェクト一覧に戻る', projects_path %>
| <%= link_to 'プロジェクト内容を編集する', edit_project_path(@project) %>
